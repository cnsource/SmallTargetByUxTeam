<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".formulation_targets.FormulationActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1A8FE3"
        android:id="@+id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <ImageView
                android:padding="10dp"
                android:id="@+id/formulation_back"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="写下今日目标"
                android:textSize="18sp"/>
            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/target_report_btn"
                android:background="#0fff"
                android:textSize="18sp"
                android:paddingRight="8dp"
                android:drawableLeft="@drawable/ic_report_target"
                android:drawablePadding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <EditText
        android:background="#fff"
        android:gravity="left|top"
        android:padding="4dp"
        android:maxLength="100"
        android:hint="目标内容"
        android:layout_below="@id/toolbar"
        android:id="@+id/target_text"
        android:layout_width="match_parent"
        android:layout_above="@id/img"
        android:layout_height="match_parent" />
    <ImageView
        android:visibility="gone"
        android:layout_above="@id/selectimg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/img"/>
    <Button
        android:background="#EE5622"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="上传目标内容图片"
        android:id="@+id/selectimg"
        android:layout_above="@id/tv"
        android:layout_width="180dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/selectimg"
        android:layout_alignTop="@id/selectimg"
        android:layout_alignBottom="@id/selectimg"
        android:orientation="horizontal"
        >
        <RadioGroup
            android:weightSum="2"
            android:orientation="horizontal"
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="公开"
                android:checked="true"
                android:buttonTintMode="multiply"
                android:layout_weight="1"
                android:id="@+id/radio0"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="私有"
                android:buttonTintMode="multiply"
                android:layout_weight="1"
                android:id="@+id/radio1"/>
        </RadioGroup>
    </LinearLayout>
    <TextView
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择监督人："
        android:id="@+id/tv"
        android:layout_above="@id/supervisor_seletor"/>
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/supervisor_seletor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

    </androidx.appcompat.widget.AppCompatSpinner>
</RelativeLayout>